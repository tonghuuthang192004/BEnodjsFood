extends ../../layout/default.pug
include ../../mixins/box-head.pug

block main
    .container.my-3
        .row
            .col-12
                +box-head('Danh Sách Sản Phẩm')   

        .row
          each item in products  
            .col-sm-6.col-md-4.col-lg-3.mb-3
                .product-item
                    .inner-image
                        img(src=item.thumbnail)
                        .inner-discount -20%
                    .inner-content
                        h3.inner-title #{item.title}
                        .inner-price-new #{item.priceNew}
                        .inner-price-old #{item.discountPercentage}
